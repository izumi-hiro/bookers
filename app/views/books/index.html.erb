<p id="notice"></p>
<h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <%= @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
<label for="book_title">Title</label>
<%= f.text_field :title %>
<label for="book_body">Body</label>
<%= f.text_area :body %>
<%= f.submit 'Create Book' 


